VOTCABIN="@bindir@"
VOTCALDLIB="@libdir@"

PATH="${VOTCABIN}${PATH:+:}${PATH}"
LD_LIBRARY_PATH="${VOTCALDLIB}:${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}"

export VOTCABIN VOTCALDLIB PATH LD_LIBRARY_PATH

#votca rc files
VOTCASHARE="@votcashare@"
for rc in "$VOTCASHARE/rc/"*rc.bash; do
  [ -r "$rc" ] && . "$rc"
done
unset rc

#bash cmopletion
if [ -n "$BASH_VERSION" ] && [ -r "$VOTCASHARE/completion.bash" ]; then 
  source "$VOTCASHARE/completion.bash"
  for comp in "$VOTCASHARE/rc/"*completion.bash; do
    [ -r "$comp" ] && source "$comp"
  done
  unset comp
fi
unset VOTCASHARE
