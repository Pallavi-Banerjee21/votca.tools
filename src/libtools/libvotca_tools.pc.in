prefix=@CMAKE_INSTALL_PREFIX@
libdir=${prefix}/@LIB@
includedir=${prefix}/include

Name: libvotca_tools
Description: basic tools of the votca package
URL: http://www.votca.org
Version: @VERSION@
Requires: gsl fftw3 @BOOST_PKG@
Libs: -L${libdir} -lvotca_tools @PKGLIBSEXPAT@ @PKGLIBSBOOST@ @PTHREAD_LIBS@ @PTHREAD_CFLAGS@
Libs.private: -lm
Cflags: -I${includedir} -I@EXPAT_INCLUDE_DIR@ @PKGCFLAGSBOOST@ @PTHREAD_CFLAGS@
